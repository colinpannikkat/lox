var n = 100;

// Print the upper part of the diamond
for (var i = 0; i < n; i++) {
    for (var j = 0; j < n - i - 1; j++) {
        print " ";
    }
    for (var j = 0; j < 2 * i + 1; j++) {
        print "*";
    }
    print ""\;
}

// Print the lower part of the diamond
for (var i = n - 2; i >= 0; i--) {
    for (var j = 0; j < n - i - 1; j++) {
        print " ";
    }
    for (var j = 0; j < 2 * i + 1; j++) {
        print "*";
    }
    print ""\;
}